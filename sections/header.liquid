<header>
    <nav>

        <!-- New menu-->
        <nav>
            {% include 'menu' %}
            <li class="item button"><a href="/cart"><i class="fa fa-shopping-cart" aria-hidden="true"></i></a></li>
            {% if shop.customer_accounts_enabled %}
            {% if customer %}
            <li class="item button"><a href="/account"><i class="fa fa-user" aria-hidden="true"></i></a></li>
            <li class="item button"><a href="/account"><i class="fa fa-sign-out" aria-hidden="true"></i></a></li>
            {% else %}
            <li class="item button secondary"><a href="/account/login"><i class="fa fa-sign-in"
                        aria-hidden="true"></i></a>
            </li>
            <li class="toggle"><span><i class="fa fa-bars"></i></span></li>
            </ul>
            {% endif %}
            {% endif %}
        </nav>

        <!-- New menu stop-->
</header>

{% schema %}
{
"name": "Main Menu",
"settings": [
{
"type": "link_list",
"id": "main_linklist",
"label": "Menu",
"default": "main-menu"
}
]
}
{% endschema %}