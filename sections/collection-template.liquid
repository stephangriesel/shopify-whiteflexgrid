<section class="section-collection">
    <div class="collection-filters">
        {% for link in linklists[section.settings.category].links %}
        {% if link.links != blank %}
        <button class="accordion">{{link.title}}</button>
        <div class="panel">
            <ul>
                {% for childlink in link.links %}
                <li><a href="{{link.url}}">{{childlink.title}}</a></li>
                {% endfor %}
            </ul>
        </div>
        {% endif %}
        {% endfor %}

    </div>
    <div class="span-2 products-collection">
        {% for product in collection.products %}
        <div class="product">
            <img src="{{product.featured_image.src | img_url: '150x'}}}" alt="product">
            <h4>{{product.title}}</h4>
            <p>{{product.price | money}}</p>
            {% if product.compare_at_price and product.compare_at_price != product.price %}
            <h4>SALE</h4>
            {% endif %}
        </div>
        {% endfor %}
    </div>
</section>

{% schema %}
{
"name": "Collection Page",
"settings": [
{
"type": "link_list",
"id": "category",
"label": "Collection Dropdown"
}
]
}
{% endschema %}