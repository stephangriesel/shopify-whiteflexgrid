{% include 'breadcrumbs', title: 'Cart' %}

<section class="cart-section">
    <div class="product-list">
        <form method="post">
            <table class="table">
                <thead>
                    <tr>
                        <th>Item Name</th>
                        <th>Quantity</th>
                        <th>Item Price</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for line_item in cart.items %}
                    <tr>
                        <td>
                            <div class="product-info">
                                <img width="80" src="{{line_item.image | product_img_url: '1920x'}}" alt="">
                                <a href="{{line_item.url}}">{{line_item.title}}</a>
                            </div>
                        </td>
                        <td>
                            <input type="number" class="" name="updates[]" value={{line_item.quantity}} min="0"
                                pattern="[0-9]*">
                        </td>
                        <td>{{line_item.line_price | money}}</td>
                        <td>
                            <!-- Shopify Cart Documentation: https://shopify.dev/docs/liquid/reference/objects/cart -->
                            <a class="product-remove" href="/cart/change?line={{forloop.index}}&quantity=0"
                                rel={{line_item.id}}>Remove</a>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
            <div class="row justify-content-end cart-total">
                <div class="col-md-2">
                    Total
                </div>
                <div class="col-md-2">
                    {{cart.total_price | money}}
                </div>
            </div>
            <input type="submit" name="checkout" class="" value="Checkout">
            <input type="submit" name="update" class="" value="Update">
        </form>
    </div>
</section>