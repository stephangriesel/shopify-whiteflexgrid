{% include 'breadcrumbs', title: 'Contact' %}

<section>
    <div class="form-block">

        {% form 'contact' %}
        {% if form.posted_successfully? %}
        <p>Thank you for reaching out! :) We will get back to you soon.</p>
        {% endif %}

        <div class="form-group">
            <input type="text" placeholder="Your Name" class="form-control" name="contact[name]" id="name">
        </div>
        <div class="form-group">
            <input type="email" placeholder="Your Email" class="form-control" name="contact[email]" id="email">
        </div>
        <div class="form-group">
            <input type="text" placeholder="Subject" class="form-control" name="contact[subject]" id="subject">
        </div>
        <div class="form-group">
            <textarea rows="6" placeholder="Message" class="form-control" name="contact[message]"
                id="message"></textarea>
        </div>
        <div>
            <input type="submit" id="contact-submit" value="Submit">
        </div>
        {% endform %}
    </div>
    <div>
        <div class="contact-info">
            <ul class="contact-short-info list-unstyled">
                {% if settings.address != blank %}
                <li>
                    <i class="fa fa-home"></i>
                    <span>Address: {{settings.address}}</span>
                </li>
                {% endif %}
                {% if settings.phone != blank %}
                <li>
                    <i class="fa fa-mobile"></i>
                    <span>Phone: {{settings.phone}}</span>
                </li>
                {% endif %}
                {% if settings.email != blank %}
                <li>
                    <i class="fa fa-envelope-o"></i>
                    <span>Email: {{settings.email}}</span>
                </li>
                {% endif %}
            </ul>
        </div>
    </div>
</section>